# Ignore bundler config
/.bundle

# Ignore environment variable files
/.env*
/config/master.key

# Ignore log and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles but keep the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development)
# and SQLite databases if used in testing.
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore assets generated by the asset pipeline
/public/assets
/public/packs
/node_modules
/yarn-error.log

# Ignore cache and tmp files
/tmp/cache/*
!/tmp/cache/
!/tmp/cache/.keep

# Ignore database files (in case SQLite is ever used)
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore IDE and editor files
*.swp
*.swo
.idea/
.vscode/
.DS_Store

# Ignore coverage reports (if using SimpleCov or similar)
/coverage

# Ignore system-specific files
*.lock
*.bak
Thumbs.db
